<div class="main">
  <div class="form-wrap">
    <div class="form__wrapper">
      <h2 class="devise-header">ユーザー新規登録</h2>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

        <div class="field">
          <label class="form-name">ユーザー名</label>
          <%= f.text_field :name, class:"form-default", maxlength:"20", id:"user_name", autofocus: true %>
        </div>
        <div class="field">
          <label class="form-name">メールアドレス</label>
          <%= f.email_field :email, class:"form-default", id:"user_email", autocomplete: "email" %>
        </div>
        <div class="field">
          <label class="form-name">パスワード</label>
          <span class="caution">※8文字以上の半角英数字を設定してください</span>
          <%= f.password_field :password, class:"form-default", id:"user_password", autocomplete: "new-password" %>
        </div>
        <div class="field">
          <label class="form-name">パスワード再入力</label>
          <%= f.password_field :password_confirmation, class:"form-default", id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>